{% extends "base.html.twig" %}
{% block title %}Cadastro{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="css/themes/form.css"/>
{% endblock %}
{% block body %}
    {% if realizado %}
        <div class="alert alert-danger" role="alert">
            Cadastro Realizado
        </div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Cadastre-se</h5>
                        {{ form_start(form) }}
                            <div class="form-label-group">
                                {{ form_widget(form.nome_cliente, {'attr': {'class': 'form-control' , 'placeholder': 'Nome Completo'}}) }}
                                {{form_label(form.nome_cliente, 'Nome Completo')}}
                            </div>
                            <div class="form-label-group">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder': 'Email'}}) }}
                                {{form_label(form.email, 'Email')}}
                            </div>
                            <div class="form-label-group">
                                {{ form_widget(form.cpf, {'attr': {'class': 'form-control' , 'placeholder': 'CPF'}}) }}
                                {{form_label(form.cpf, 'CPF')}}
                            </div>
                            <div class="form-label-group">
                                {{ form_widget(form.telefone, {'attr': {'class': 'form-control' , 'placeholder': 'Telefone'}}) }}
                                {{form_label(form.telefone, 'Telefone')}}
                            </div>
                            <div class="form-label-group">
                                {{ form_widget(form.senha, {'attr': {'class': 'form-control' , 'placeholder': 'Senha'}}) }}
                                {{form_label(form.senha, 'Senha')}}
                            </div>
                            <div class="form-label-group">
                                {{ form_widget(form.confirma, {'attr': {'class': 'btn btn-lg btn-primary btn-block text-uppercase'}}) }}
                            </div>
                            {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}