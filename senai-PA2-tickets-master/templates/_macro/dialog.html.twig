{% macro dialog(title, content, onCofirm, onCancel) %}
    <div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{{ title }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p>{{ content }}</p>
        </div>
        <div class="modal-footer">
            <button onClick={{ onConfirm }} type="button" class="btn btn-primary">Confirmar</button>
            <button onClick={{ onCancel }} type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        </div>
        </div>
    </div>
    </div>
{% endmacro %}